<h1 class="text-center">投稿詳細</h1>
<section class="card border-dark mt5">
  <div class="card-header">
    <h4><%= @post.title %></h4>
  </div>
  <div class = "card-body">
    <p class= "card-text"><%= simple_format(h @post.content) %></p>
  </div>
  <div class = "card-body">
  <% if @post.image_url %>
    <%= image_tag @post.image_url(:thumb) %>
  <% end %>
  </div>
</section>